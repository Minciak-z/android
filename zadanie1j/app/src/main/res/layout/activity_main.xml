<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <EditText
        android:id="@+id/przychodEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wprowadź przychód"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/stawkaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wprowadź stawkę (np. 12)"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/obliczButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oblicz ryczałt" />

    <TextView
        android:id="@+id/wynikTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ryczałt: 0 zł"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
